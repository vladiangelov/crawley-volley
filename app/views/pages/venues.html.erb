<div class="container">
  <div>
    <h1 class="page-h1">OUR VENUES</h1>
  </div>
  <div class="about-us-card">
    <% @venues.each do |venue| %>
      <div class="locations">
        <h2><%= venue.name %></h2>
        <p><em><%= venue.address %></em></p>
      </div>
      <p class="locations-description"><%= venue.description %></p>
    <% end %>
  </div>
  <div
  id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
